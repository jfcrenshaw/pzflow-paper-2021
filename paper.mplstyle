
# Matplotlib settings for a paper

# Figure
figure.figsize : 3.35, 3.35
figure.dpi     : 150
figure.titlesize : 10
figure.constrained_layout.use: True

# Fonts
font.size   : 10
font.family : serif
text.usetex : True

# Axes
axes.titlesize  : 10
axes.labelsize  : 10
xtick.labelsize : 10
ytick.labelsize : 10
#xtick.direction : in 
#ytick.direction : in 

# Lines and Markers
lines.linewidth  : 1
lines.markersize : 2

# Legend
legend.fontsize : 10

# Saved Figure
savefig.dpi        : 600